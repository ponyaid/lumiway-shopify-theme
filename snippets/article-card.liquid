<div class="article-card h-100 position-relative">
  <div class="position-absolute top-0 start-0 mt-2 ms-2 p-1 z-1">
    <div class="d-flex flex-wrap gap-2">
      {% for tag in article.tags %}
        <div class="product-type">
          {% render "icon"
            , icon: tag %}
          <span>
            <small>{{ tag }}</small>
          </span>
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="card border-0">
    <div class="ratio ratio-16x9">
      {% if article.image != blank %}
        {{ article.image | img_tag: article.title, 'object-fit-cover rounded', '416x' }}
      {% else %}
        {{ 'collection-apparel-1' | placeholder_svg_tag: 'card-img-top' }}
      {% endif %}
    </div>
    <div class="card-body px-0">
      <p class="card-text mb-2">
        <small class="text-muted fw-semibold">
          <time datetime="{{ article.published_at | date }}">{{ article.published_at | date: "%B %d, %Y" }}</time>
        </small>
      </p>
      <a href="{{ article.url }}">
        <h5 class="card-title fw-bold">{{ article.title }}</h5>
      </a>
      <p class="card-text">{{ article.excerpt_or_content | strip_html }}</p>
      <a href="{{ article.url }}" class="btn btn-sm btn-outline-secondary w-100">
        Read in 5 minuts
      </a>
    </div>
  </div>
</div>