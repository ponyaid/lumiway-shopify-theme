<section class="bg-light py-3 py-md-4">
  <div class="container-fluid">
    <div class="mb-3">
      {% render 'breadcrumbs' %}
    </div>
    <div class="text-center py-4 pb-md-5">
      <h1 class="fw-bold">{{ page.title }}</h1>
      <p class="h6 text-muted">Last update {{ page.published_at | date: '%B %d, %Y' }}</p>
    </div>
  </div>
</section>

<section class="py-4 py-md-5">
  <div class="container py-2 pb-md-3">
    <div class="col-lg-7 col-xxl-6 m-auto">
      {{ page.content }}
    </div>
  </div>
</section>

{% section "feedback-section" %}