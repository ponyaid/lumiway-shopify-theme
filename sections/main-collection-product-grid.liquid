{% paginate collection.products by 9 %}
  <section class="py-4 py-md-5">
    <div class="container">
      <div class="row g-4">
        {% for product in collection.products limit: 4 %}
          <div class="col-12 col-md-6 {% if section.settings.product_card_is_row != true  %}col-lg-4 col-xl-3{% endif %}">
            {% include 'product-card'
              , product: product
              , isRow: section.settings.product_card_is_row 
              , titleSize: 'h6' %}
          </div>
        {% endfor %}
        <div class="col-12 col-md-6 {% if section.settings.product_card_is_row != true  %}col-lg-4 col-xl-3{% endif %}">
          <div class="card border-0 h-100 py-3 px-4" style="background: radial-gradient(143.62% 141.42% at 0% 100%, #A0C9EC 8.87%, #D6E031 25.56%, #F04F23 77.99%);">
            <div class="card-body d-flex flex-column align-items-start">
              <h2 class="h1 card-title fw-bold text-white">
                Space<br>For<br>Banner
              </h2>
              <a href="#" class="btn btn-outline-light mt-auto">Button CTA</a>
            </div>
          </div>
        </div>
        {% for product in collection.products offset: 4 limit: 5 %}
          <div class="col-12 col-md-6 {% if section.settings.product_card_is_row != true  %}col-lg-4 col-xl-3{% endif %}">
            {% include 'product-card'
              , product: product
              , isRow: section.settings.product_card_is_row 
              , titleSize: 'h6' %}
          </div>
        {% endfor %}
        <div class="col-12 col-md-6">
          <div class="card border-0 h-100 py-3 px-4" style="background: #FFEED0;">
            <div class="card-body d-flex flex-column align-items-start">
              <h2 class="h1 card-title fw-bold text-primary">
                Space<br>For<br>Banner
              </h2>
              <a href="#" class="btn btn-outline-primary mt-auto">Button CTA</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {% if paginate.pages > 1 %}
    <section class="py-4 border-top">
      <div class="container pt-2 pt-md-3">
        <div class="d-flex justify-content-center">
          {% render 'pagination'
            , paginate: paginate %}
        </div>
      </div>
    </section>
  {% endif %}


{% endpaginate %}

{% schema %}
  {
    "name": "main-collection-grid",
    "settings": [
      {
        "type": "checkbox",
        "id": "product_card_is_row",
        "default": false,
        "label": "Product card is a row"
      }
    ]
  }
{% endschema %}