<section class="featured-collection py-4 py-md-5">
  <div class="container py-2 mb-3">
    <div class="text-center">
      <h2 class="h1 fw-bold">{{ section.settings.title }}</h2>
      {% if section.settings.subtitle != blank %}
        <h6>{{ section.settings.subtitle }}</h6>
      {% endif %}
    </div>
  </div>
  <div class="container py-2">
    <div class="featured-collection__items">
      {% for product in collections[section.settings.collection].products limit: section.settings.products_to_show %}
        <div class="mx-2 h-auto">
          {% include 'product-card'
            , product: product %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "featured-collection",
    "class": "featured-collection-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "Featured products",
        "label": "Title"
      }, {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle"
      }, {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      }, {
        "type": "range",
        "id": "products_to_show",
        "min": 2,
        "max": 25,
        "step": 1,
        "default": 4,
        "label": "Products to show"
      }
    ],
    "presets": [
      {
        "category": "Collection",
        "name": "Featured Collection"
      }
    ]
  }
{% endschema %}