<section class="complementary-products py-3">
  <div class="container py-3">
    <div class="text-center mb-4">
      <h2 class="h1 fw-bold text-capitalize">Stack and <br>save 10%</h2>
      <p>Recommendation based on orders and feedback from our community!</p>
    </div>
    <div class="rounded p-3 bg-light">
      <div class="row g-3 row-cols-1">
        <div class="d-none d-md-block col-md-9">
          <div class="row g-3">
            <div class="col">
              {% render "product-card" %}
            </div>
            <div class="col">
              {% render "product-card" %}
            </div>
            <div class="col">
              {% render "product-card" %}
            </div>
          </div>
        </div>
        <div class="col-12 col-md-3">
          <form class="d-flex flex-column bg-white rounded shadow-sm p-3 h-100">
            <h4 class="text-center fw-bold">Taking care of you with benefits for you</h4>
            <div class="mb-3">
              <div class="mb-2">
                <label class="w-100" for="check-1">
                  <div class="card border-0">
                    <div class="card-body">
                      <div class="d-flex align-items-center gap-3">
                        <input
                          class="form-check-input"
                          type="checkbox"
                          value=""
                          id="check-1">
                        <div style="width: 4rem;">
                          {{ 'product-apparel-1' | placeholder_svg_tag: 'w-100 h-auto' }}
                        </div>
                        <div>
                          <p class="mb-1 fw-bold">Sleep + Gummies</p>
                          <p class="m-0">
                            <span class="h5 m-0 fw-semibold" style="color: #00C2AE;">$30.50</span>
                            <small class="text-muted">
                              <s>$39.95</s>
                            </small>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </label>
              </div>
              <div class="mb-2">
                <label class="w-100" for="check-2">
                  <div class="card border-0">
                    <div class="card-body">
                      <div class="d-flex align-items-center gap-3">
                        <input
                          class="form-check-input"
                          type="checkbox"
                          value=""
                          id="check-2">
                        <div style="width: 4rem;">
                          {{ 'product-apparel-2' | placeholder_svg_tag: 'w-100 h-auto' }}
                        </div>
                        <div>
                          <p class="mb-1 fw-bold">Full Spectrum</p>
                          <p class="m-0">
                            <span class="h5 m-0 fw-semibold" style="color: #00C2AE;">$30.50</span>
                            <small class="text-muted">
                              <s>$39.95</s>
                            </small>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </label>
              </div>
            </div>
            <div class="fw-semibold text-muted mb-3 mt-auto">
              <div class="d-flex justify-content-between mb-1">
                <p class="m-0">Old price:</p>
                <p class="m-0">
                  <s>$120.95</s>
                </p>
              </div>
              <div class="d-flex justify-content-between mb-1">
                <p class="m-0">Save:</p>
                <p class="m-0" style="color: #05A402;">$38.55 (-35%)</p>
              </div>
              <div class="d-flex justify-content-between mb-1">
                <p class="m-0">Total:</p>
                <p class="text-body m-0">$81.50</p>
              </div>
            </div>
            <button class="btn btn-lg btn-primary w-100 fw-bold" type="submit">I want this bundle</button>
          </form>
        </div>
      </div>
    </div>

  </div>
</section>