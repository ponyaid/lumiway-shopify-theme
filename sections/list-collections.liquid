<section class="py-5">
  <div class="container">
    <div class="text-center mb-4">
      <h2 class="h1 fw-bold text-capitalize">{{ section.settings.heading }}</h2>
      <h5>{{ section.settings.description }}</h5>
    </div>
    <div class="row justify-content-center g-1 g-md-3 mb-4">
      {% for block in section.blocks %}
        <div class="list-collections__item col-12 col-md-4 col-xl-2">
          <div class="card h-100 position-relative">
            {{ 'product-apparel-1' | placeholder_svg_tag: 'bottom-0 end-0 h-100 object-fit-cover position-absolute start-0 top-0 w-100' }}
            <div class="card-body d-flex flex-column position-relative">
              <h5 class="card-title fw-bold mb-3 mt-md-auto">{{ block.settings.heading }}</h5>
              <div class="card-text">{{ block.settings.description }}</div>
              <a class="btn btn-sm p-0 d-none" href="#">Read more</a>
            </div>
          </div>
        </div> 
      {% endfor %}
    </div>
    <div class="d-flex flex-column align-items-center">
      <a class="btn btn-outline-secondary mb-2" href="#">Read all reviews</a>
      <div class="d-flex gap-1 align-items-center">
        {%- render 'icon'
          , icon: 'stars' -%}
        <small>
          <strong>4.5</strong>
          based on
          <strong>1000+</strong>
          Happy Women</small>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "list-collections",
    "settings": [
      {
        "type": "inline_richtext",
        "id": "heading",
        "label": "Heading",
        "default": "Block Heading"
      }, {
        "type": "richtext",
        "id": "description",
        "label": "Description"
      }
    ],
    "blocks": [
      {
        "name": "Item",
        "type": "item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "inline_richtext",
            "id": "heading",
            "label": "Heading",
            "default": "Item Heading"
          }, {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolorum libero eligendi laboriosam quam mollitia voluptatibus tempore quibusdam? In nihil alias suscipit non ipsum quae magni harum?</p>"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Content",
        "name": "List Collections",
        "blocks": [
          {
            "type": "item"
          }, {
            "type": "item"
          }, {
            "type": "item"
          }
        ]
      }
    ]
  }
{% endschema %}